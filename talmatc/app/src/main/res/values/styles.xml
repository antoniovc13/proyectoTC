<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/md_grey_300</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogFullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- TEXT -->
    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Text.Italic" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/md_grey_800</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Title.Sub" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.Item" parent="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Data" parent="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <!-- TOOLBAR -->
    <style name="Toolbar" parent="AppTheme.PopupOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTab" parent="Widget.Design.TabLayout">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="tabTextAppearance">@style/AppTab.TextAppearance</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="AppTab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- STYLES PARA ESTRUCTURA -->
    <style name="general_container">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="cardview_default" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/md_white_1000</item>
        <item name="android:layout_marginBottom">@dimen/cardview_separation</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="data_container">
        <item name="android:paddingTop">@dimen/cardview_paddingtop</item>
        <item name="android:paddingBottom">@dimen/cardview_paddingbottom</item>
        <item name="android:paddingLeft">@dimen/cardview_paddingleft</item>
        <item name="android:paddingRight">@dimen/cardview_paddingright</item>
    </style>

    <style name="data_container_img">
        <item name="android:paddingTop">@dimen/cardview_paddingtop</item>
        <item name="android:paddingBottom">@dimen/cardview_paddingbottom</item>
    </style>

    <style name="data_layout">
        <item name="android:layout_marginBottom">@dimen/data_separation</item>
    </style>

    <style name="data_layout_and_data_container" parent="data_container">
        <item name="android:layout_marginBottom">0dp</item>
    </style>



    <style name="separator">
        <item name="android:background">@color/md_grey_300</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="separator_vertical">
        <item name="android:background">#c1c1c1</item>
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- DATA LABEL -->


    <style name="data_title" parent="TextStyle.Data">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <!-- BUTTON -->
    <style name="text_button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">65dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/half_black</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_primary_bg</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_secondary_bg</item>
    </style>

    <style name="Button.Default" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_default_bg</item>
    </style>



    <!-- WIDGET -->
    <style name="Widget.Group" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:layout_marginTop">-1dp</item> <!-- Ensures we don't get a 2 dp top stroke -->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/bg_input_group</item>
    </style>

    <style name="Widget.Group.Top">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_input_group_top</item>
    </style>

    <style name="Widget.Group.Bottom">
        <item name="android:background">@drawable/bg_input_group_bottom</item>
    </style>

    <style name="Widget.Group.Single" parent="Widget.Group.Top">
        <item name="android:background">@drawable/bg_input_group_single</item>
    </style>

    <style name="Widget.Group.Single.Warning" parent="Widget.Group.Top">
        <item name="android:background">@drawable/bg_input_group_single_warning</item>
    </style>

    <!-- WIDGET CLICK -->
    <style name="Widget.Group.Click" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:layout_marginTop">-1dp</item> <!-- Ensures we don't get a 2 dp top stroke -->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/bg_input_group_click</item>
    </style>


    <!-- STYLES ESPECIFICOS -->
    <style name="viewpager_indicator">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">9sp</item>
        <!--    <item name="android:fontFamily">sans-serif</item>-->
        <!--    <item name="android:background">@drawable/circle</item>-->
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="viewpager_indicator_separator">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="AlertDialogDefault" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/yellow_primary_dark</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="genDialogButtonLeft">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:background">@color/md_white_1000</item>
    </style>
    <style name="genDialogButtonRight">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:background">@color/md_white_1000</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/text_secondary</item>
        <item name="android:background">@color/white</item>
        <item name="colorControlNormal">@color/text_secondary</item>
        <!--
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        -->
    </style>


    <style name="CheckBox_Defailt">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="colorAccent">@color/md_teal_400</item>
        <!--
        <item name="android:fillColor">@color/md_teal_400</item>
        -->
    </style>

    <!-- CARDVIEW TITTLE -->
    <style name="cardview_tittle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/md_blue_700</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="cardview_tittle_and_data_layout" parent="data_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/md_blue_700</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!--cardview_subtittle-->
    <style name="cardview_subtittle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="cardview_subtittle_and_data_layout" parent="data_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- DATA LABEL -->
    <style name="data_label_horizontal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/label_value_horizontal_separation</item>
        <item name="android:textColor">@color/half_black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="data_label_vertical">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/label_value_vertical_separation</item>
        <item name="android:textColor">@color/half_black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="data_label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/label_value_vertical_separation</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="data_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- DATA VALUE -->
    <style name="data_value">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="data_value_and_data_layout" parent="data_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="data_value_match">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- STYLES PARA LISTVIEWS -->
    <style name="list_with_separator">
        <item name="android:divider">@color/light_grey</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="list_of_cardviews">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/cardview_separation</item>
    </style>

    <!-- COllAPSER -->
    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">@color/md_grey_50</item>
        <item name="colorControlNormal">@color/md_grey_50</item>
        <item name="colorControlActivated">@color/md_teal_A400</item>
    </style>

