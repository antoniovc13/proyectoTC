<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/cardview_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:clickable="true"
    android:elevation="2dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_code_flight"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_rectangle_green"
                android:padding="4dp"
                android:src="@mipmap/ic_flight_takeoff_white_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    style="@style/TextStyle.Item"
                    android:layout_weight="4"
                    android:text="Vuelo: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_flight_code"
                    style="@style/TextStyle.Item"
                    android:layout_weight="1"
                    android:text="LA 3011"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle.Item"

                        android:text="H.P./H.R.: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_date_assignation"
                        style="@style/TextStyle.Item"

                        android:text="08:00/08:05"
                        android:textSize="12sp" />
                </LinearLayout>


                <View style="@style/separator_vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"

                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle.Item"

                        android:text="PEA:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_pea"
                        style="@style/TextStyle.Item"

                        android:paddingLeft="10dp"
                        android:text="8"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    style="@style/TextStyle.Item"
                    android:layout_weight="1"
                    android:text="Cantidad Elementos:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_count_elements"
                    style="@style/TextStyle.Item"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="@color/blue_primary_dark"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
